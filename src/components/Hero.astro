---
import ButtonLink from './ButtonLink.astro';
---

<div class="hero">
    <video autoplay muted loop playsinline>
        <source src="/hero.mp4" />
    </video>
    <div class="text">
        <h1>AFK PROGETTO GIOVANI</h1>
        <p>Amicizia, passione, cultura</p>
        <ButtonLink url="/chi-siamo" text="Scopri chi siamo" icon="fa-solid fa-ticket" />
    </div>
</div>

<style>
    .hero {
        position: relative;
    }
    .hero video {
        width: 100%;
        height: 31.75rem;
        object-fit: cover;
        border-radius: 0;
    }
    .text {
        display: flex;
        flex-direction: column;
        gap: var(--space-s);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        white-space: nowrap;
    }
    .text h1 {
        color: var(--white-2);
    }
    .text p {
        color: var(--white-2);
    }
</style>
